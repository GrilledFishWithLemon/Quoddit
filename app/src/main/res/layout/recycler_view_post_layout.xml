<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="20dp"
    android:background="?attr/backgroundColor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_title"
        android:text="Post"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="?attr/textColor"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_username"
        android:layout_below="@+id/post_title"
        android:textSize="12dp"
        android:text="User ID"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="?attr/textColor"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_id"
        android:textSize="12dp"
        android:layout_below="@+id/post_username"
        android:text="Post date"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="?attr/textColor"
        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_date"
        android:textSize="12dp"
        android:layout_below="@+id/post_id"
        android:text="Post id"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="?attr/textColor"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_content"
        android:layout_below="@+id/post_date"
        android:textSize="18dp"
        android:text="Post content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textColor="?attr/textColor">


    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/upvote_button"
            android:src="@drawable/ic_arrow_upward_black_24dp">

        </ImageView>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/vote_count"
            android:textSize="14dp"
            android:layout_toRightOf="@+id/upvote_button"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="?attr/textColor">

        </TextView>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/downvote_button"
            android:src="@drawable/ic_arrow_downward_black_24dp"
            android:layout_toRightOf="@+id/vote_count"
            >

        </ImageView>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/comment_button"
            android:src="@drawable/ic_comment_black_24dp"
            android:layout_alignParentEnd="true"
            >

        </ImageView>

    </RelativeLayout>


</RelativeLayout>